@model PawPok.Models.User

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <h1 class="text-center" style="margin-bottom: 40px">Log in to PawPok</h1>
    <div class="row">
        <div class="mx-auto" style="width: 400px">
            <form id="account" asp-controller="Authentication" asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Username" class="control-label mb-2">Username</label>
                    <input asp-for="Username" class="form-control" spellcheck="false" />
                </div>

                <div class="form-group" style="margin-top: 20px">
                    <label asp-for="Password" class="control-label mb-2">Password</label>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>

                @if (ViewData.ModelState[string.Empty] != null)
                {
                    <div class="error-summary" style="margin-top: 20px">
                        @foreach (var error in ViewData.ModelState[string.Empty]!.Errors)
                        {
                            <div class="error-item text-danger">
                                @error.ErrorMessage
                            </div>
                        }
                    </div>
                }

                <button type="submit" class="follow-btn" style="margin-top: 20px">Log In</button>

                <div class="text-center" style="margin-top: 20px">
                    <t>Don't have an account?</t>
                    <a href="@Url.Action("Register", "Authentication")">Register now</a>
                </div>
            </form>
        </div>
    </div>
</div>